<%- include('../partials/admin_headside') %>

<style>
  @media print {
    body * {
      visibility: hidden;
    }
    #section-to-print, #section-to-print * {
      visibility: visible;
    }
    #section-to-print {
      position: absolute;
      left: 0;
      top: 0;
    }
  }
  </style>
  
  <div id="adminRes" style="position: fixed; top: 0; left: 0; right: 0; z-index: 9;"></div>
  
  <div class="container my-2">
      <div class="  py-3 mb-2">

          <a class="btn btn-dark btn-sm"  style="height: 30px;" href="#" onclick="window.print()">
            <i class="bi bi-printer"></i>
              Print
          </a>
      </div>
      <div class="ad-responsive-table w-100" id="section-to-print">
        <table id="myTable" class="table table-striped table-bordered table-responsive   table-success ">
            <thead>
                <tr>
                    <th>Sr No.</th>
                    <th>Date</th>
                    <th>orderid</th>
                    <th>User</th>
                    <th>Items</th>
                    <th>Bill amount</th>
                    <th>Discount</th>
                    <th>Total bill</th>
                </tr>
            </thead>
            <tbody>
  
                <% salesData.forEach((val,ind)=>{  %>
                
                <tr>
                    <td><%= ind+1 %></td>
                    <td><%= val.ordered_date.getDate() %>/<%= val.ordered_date.getMonth()+1 %>/<%= val.ordered_date.getFullYear() %></td>
                    <td class="small"><%=val._id%></td>
                    <td ><%=val.userId.name %></td>
                    <td ><%=val.products.length%></td>
                    <td >$<%=val.total%></td>
                    <td><%= val.discount_amount %></td>
                    <td class="totalAmount">
                      $<%= val.grand_total%> 
                    </td>
                </tr>
                
                <% })%>
                <tr>
                    <td> </td>
                    <td> </td>
                    <td ></td>
                    <td ></td>
                    <td ></td>
                    <td ></td>
                    <td>TOTAL : </td>
                    <td id="grand" class="fw-bold">
                      $ 
                    </td>
                </tr>
            </tbody>
        </table>
      </div>
  </div>
  
  
  
  <script>
    let totalAmount = 0;
$("#myTable tr").each(function() {
  let amount = parseFloat($(this).find(".totalAmount").text().trim());
  totalAmount += amount;
});

$("#grand").text(totalAmount);
  </script>
   
    
  
  
   